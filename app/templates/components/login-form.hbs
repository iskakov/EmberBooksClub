<form onsubmit={{action "login"}}>
  {{#each errors as |error|}}
    <div class="alert alert-danger">{{error.detail}}</div>
  {{/each}}
  <div class="form-group">
    <label>Email:</label>
    {{input value=email class="form-control" placeholder=""}}
  </div>
  <div class="form-group">
    <label>Пароль:</label>
    {{input type="password" value=password class="form-control" placeholder=""}}
  </div>
  <button class="btn btn-primary my-1 btn-block active" type="submit">
    Войти
  </button>
</form>
