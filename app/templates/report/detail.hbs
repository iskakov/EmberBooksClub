<h3>Детальная информация:</h3>
<form>
  <div class="form-group">
    <label>Название книги и автор: {{model.book.title}} {{model.book.author.lastName}} {{model.book.author.firstName}}</label>
  </div>

  <div class="form-group">
    <label>Докладчик: {{model.speaker.firstName}} {{model.speaker.lastName}}</label>
  </div>
   <div class="form-group">
    <label>Дата доклада: {{model.date}}</label>

  </div>
  <div class="form-group">
    <label>Краткое содержание: {{model.shortReview}}</label>

  </div>
  <div class="form-group">
    <label>Оценка: {{model.raiting}}</label>

  </div>
  <div class="form-group">
    <label>Ссылка на презентацию: {{model.presentationUrl}}</label>

  </div>
  <div class="form-group">
    <label>Ссылка на видео: {{model.videoUrl}}</label>

  </div>

</form>

{{#if (await (can "edit report" model)) }}
  <div class="row">
    {{#link-to "report.edit" model.id class="col btn btn-primary mx-3  active"}}
      Изменить
    {{/link-to}}
    <button class="col btn btn-primary mr-3  active" onclick={{action "deleteReport" model}}>Удалить</button>
  </div>
{{/if}}