<div class="row ">
  <div class="col-3 mr-3 h-100 p-3 my-3 border text-black">
    <h4>Список книг:</h4>
      {{input value=search placeholder="Поиск" class="form-control my-2"}}
     {{#link-to "book.create" class="btn btn-primary my-2 btn-block"}}
      Добавить книгу
    {{/link-to}}
    <div></div>
    <ul class="list-group overflow-auto main-row">
      {{#each model as |book|}}
        {{#link-to "book.detail" book.id class="list-group-item my-1 border"}}
          {{book.title}}
        {{/link-to}}
      {{/each}}
    </ul>
  </div>

  <div class="col mh-100 p-3 my-3 border text-black">
    {{outlet}}
  </div>

</div>
