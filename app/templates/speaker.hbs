<div class="row ">
  <div class="col-3 mr-3 h-100 p-3 my-3 border text-black">
    <h4>Список участников:</h4>
      {{input value=search placeholder="Поиск" class="form-control my-2"}}
     {{#link-to "speaker.create" class="btn btn-primary my-2 btn-block"}}
      Добавить участника
    {{/link-to}}
    <div></div>
    <ul class="list-group overflow-auto main-row">
      {{#each model as |speaker|}}
        {{#link-to "speaker.detail" speaker.id class="list-group-item my-1 border"}}
          {{speaker.lastName}} {{speaker.firstName}}
        {{/link-to}}
      {{/each}}
    </ul>
  </div>

  <div class="col mh-100 p-3 my-3 border text-black">
    {{outlet}}
  </div>

</div>
